<div class="bg-blue-500 p-4">
    <div class="container mx-auto flex items-center justify-between">
        <a class="text-black text-2xl font-semibold" href="/">Lego Collection</a>
        <div class="hidden sm:flex space-x-4">
            <!-- Common navigation links -->
            <a class="<%= (page == '/') ? 'active' : '' %>" href="/">Home</a>
            <a class="<%= (page === '/lego/sets') ? 'active' : '' %>" href="/lego/sets">View Collection</a>
            <a class="<%= (page == '/about') ? 'active' : '' %>" href="/about">About</a>

            <!-- Dynamic links based on user session -->
            <% if (session.user) { %>
                <div class="relative" id="accountDropdown">
                    <button class="text-black flex items-center" onclick="document.getElementById('accountMenu').classList.toggle('hidden')">
                        Account- <%= session.user.userName %>
                        <svg class="h-5 w-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>
                    <ul id="accountMenu" class="absolute right-0 mt-2 p-2 bg-white border rounded hidden">
                        <a class="<%= (page == '/lego/addSet') ? 'active' : '' %>" href="/lego/addSet">Add to Collection</a>
                        <a class="<%= (page == '/userHistory') ? 'active' : '' %>" href="/userHistory">User History</a>
                        <a href="/logout">Log Out</a>
                    </ul>
                </div>
            <% } else { %>
                <div class="relative" id="accountDropdown">
                    <button class="text-black flex items-center" onclick="document.getElementById('accountMenu').classList.toggle('hidden')">
                        Account
                        <svg class="h-5 w-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>
                    <ul id="accountMenu" class="absolute right-0 mt-2 p-2 bg-white border rounded hidden">
                        <a class="<%= (page == '/login') ? 'active' : '' %>" href="/login">Login</a>
                        <a class="<%= (page == '/register') ? 'active' : '' %>" href="/register">Register</a>
                    </ul>
                </div>
            <% } %>
        </div>
    </div>
</div>

  
  
