<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= set.name %></title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f7fafc;
            color: #1a202c;
            line-height: 1.6;
            margin: 0; 
            padding: 0; 
        }

        .container {
            max-width: 100%;
            padding: 20px;
        }

        .header {
            background-color: #4299e1; 
            color: #ffffff;
            padding: 10px;
            text-align: center;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .content {
            margin-top: 20px;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .image-container {
            flex: 1;
            margin-right: 20px;
        }

        .image-container img {
            width: 100%;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .details-container {
            flex: 2;
        }

        .details-container h1 {
            font-size: 2rem;
            margin-bottom: 10px;
        }

        .details-container p {
            margin-bottom: 10px;
        }

        .back-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #4299e1;
            color: #ffffff;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

        .back-button:hover {
            background-color: #2c5282;
        }

        .edit-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #4299e1;
            color: #ffffff;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

        .edit-button:hover {
            background-color: #d69e2e;
        }
    </style>
</head>
<body>
    <div class="container mx-auto p-4">
        <div class="header">
            Lego Collection
        </div>
        <div class="content">
            <div class="image-container">
                <img src="<%= set.img_url %>" alt="<%= set.name %>">
            </div>
            <div class="details-container">
                <h1><%= set.name %></h1>
                <p><strong>Name:</strong> <%= set.name %></p>
                <p><strong>Year:</strong> <%= set.year %></p>
                <p><strong>Theme:</strong> <a href="/lego/sets?theme=<%= set.theme %>"><%= set.Theme.name %></a></p>
                <p><strong>Number of Parts:</strong> <%= set.num_parts %></p>
                <div class="mt-8 text-center">
                    <h3 class="text-xl font-semibold">Random Quote</h3>
                    <p id="quote">Loading a random quote...</p>
                </div>
                <a href="#" onclick="history.back(); return false;" class="back-button mt-4">Back</a>
                <a href="/lego/editSet/<%= set.set_num %>" class="edit-button mt-4 bg-yellow-500 text-white px-4 py-2 inline-block rounded">Edit</a>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            fetch("https://quotable.io/random")
                .then((response) => response.json())
                .then((data) => {
                    document.getElementById("quote").textContent = `"${data.content}" - ${data.author}`;
                })
                .catch((error) => {
                    console.error("Failed to fetch a random quote:", error);
                });
        });
    </script>
</body>
</html>
